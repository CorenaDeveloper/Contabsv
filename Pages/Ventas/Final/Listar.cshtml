@page
@model Contabsv_core.Pages.Ventas.Final.ListarModel
@{
}
<div class="card">
    <div class="card-header" style="padding: 6px 10px;">
        <h5>Consumidor Final</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-lg-3">
                <label class="form-label">Fecha Inicio:</label>
                <input type="date" class="form-control form-control-sm" id="fechaInicio">
            </div>
            <div class="col-lg-3">
                <label class="form-label">Fecha Fin:</label>
                <input type="date" class="form-control form-control-sm" id="fechaFin">
            </div>
            <div class="col-lg-3">
                <label class="form-label">Tipo Fecha:</label>
                <select class="form-select form-select-sm" id="tipoFecha">
                    <option value="1">Fecha de Emisión</option>
                    <option value="2">Fecha de Presensatación</option>
                </select>
            </div>
            <div class="col-lg-3 mt-3 text-end">
                <button type="submit" class="btn btn-shadow btn-primary" onclick="cargarData();">Consultar</button>
            </div>
        </div>

        <div id="spinner" class="text-center" style="display: none;">
            <div class="spinner-grow" style="width: 3rem; height: 3rem" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <table id="tblConsumidor" class="display" style="width:100%; display: none;">
            <thead>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<script>
    let table;

    $(document).ready(function () {
        let today = new Date();
        let firstDay = new Date(today.getFullYear(), today.getMonth(), 1).toISOString().split('T')[0];
        let lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0).toISOString().split('T')[0];

        $("#fechaInicio").val(firstDay);
        $("#fechaFin").val(lastDay);

        cargarData();
    });

    function cargarData() {
        $("#spinner").show();

        if ($.fn.dataTable.isDataTable('#tblConsumidor')) {
            $('#tblConsumidor').DataTable().destroy();
        }

        table = new DataTable('#tblConsumidor', {
            responsive: true,
            processing: true,
            serverSide: false,
            ajax: {
                url: "/Ventas/Final/Listar?handler=Consumidor",
                type: "GET",
                data: function (d) {
                    return {
                        fechaInicio: $("#fechaInicio").val() || "",
                        fechaFin: $("#fechaFin").val() || "",
                        tipoFecha: $("#tipoFecha").val() || 1
                    };
                },
                dataSrc: function (json) {
                    return json || [];
                },
                error: function (xhr, status, error) {
                    showAlert("danger", "Error al cargar datos: " + error);
                }
            },
            columns: [
                { data: "fechaEmision", title: "Emisión" },
                { data: "fechaPresentacion", title: "Presentacion", className: "text-start" },
                { data: "detalleTipoDocumento", title: "Tipo"},
                {
                    data: null,
                    title: "OPT",
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        return `
                                 <button class="btn btn-sm btn-primary edit-btn" data-id="${row.idVentaConsumidor}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                    <button class="btn btn-sm btn-danger delete-btn" data-id="${row.idVentaConsumidor}">
                                    <i class="fas fa-trash"></i>
                                </button>`;
                    }
                }
            ],
            "initComplete": function () {
                $("#spinner").hide();
                $("#tblConsumidor").show();
            },
            language: {
                search: "Buscar:",
                lengthMenu: "Mostrar _MENU_ registros por página",
                info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
                zeroRecords: "No se encontraron resultados",
                emptyTable: "No hay datos disponibles",
                paginate: {
                    first: "<span class='fas fa-angle-double-left'></span>",
                    last: "<span class='fas fa-angle-double-right'></span>",
                    next: "<span class='fas fa-chevron-right'></span>",
                    previous: "<span class='fas fa-chevron-left'></span>"
                }
            }
        });

        $('#tblConsumidor tbody').on('click', '.edit-btn', function () {
            let id = $(this).data('id');
            window.location.href = `Editar?id=${id}`;
        });

        $('#tblConsumidor tbody').on('click', '.delete-btn', function () {
            let id = $(this).data('id');
            $('#idCompraInput').val(id);
            $('#eliminarCompraModal').modal('show');
        });
    }

</script>