<form id="documentoForm" method="post">
    <div class="card">
        <div class="card-body">
            <input type="hidden" asp-for="ventasConsumidor.idVentaConsumidor" value="0" />
            <input type="hidden" asp-for="ventasConsumidor.numeroAnexo" value="2" />
            <div class="row g-3">
                <div class="col-lg-6">
                    <label class="form-label">Cliente:</label>
