@page
@model Contabsv_core.Pages.Compras.ListarModel
@using System.Security.Claims
@{
}
<div class="card">
    <div class="card-header" style="padding: 6px 10px;">
        <h5>Compras</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-lg-3">
                <label class="form-label">Fecha Inicio:</label>
                <input type="date" class="form-control form-control-sm" id="fechaInicio">
            </div>
            <div class="col-lg-3">
                <label class="form-label">Fecha Fin:</label>
                <input type="date" class="form-control form-control-sm" id="fechaFin">
            </div>
            <div class="col-lg-3">
                <label class="form-label">Tipo Fecha:</label>
                <select class="form-select form-select-sm" id="tipoFecha">
                    <option value="1">Fecha de Presensatación</option>
                    <option value="2">Fecha de Emisión</option>
                </select>
            </div>
            <div class="col-lg-3 mt-3 text-end">
                <button type="submit" class="btn btn-shadow btn-primary" onclick="cargarData();">Consultar</button>
            </div>
        </div>

        <div id="spinner" class="text-center" style="display: none;">
            <div class="spinner-grow" style="width: 3rem; height: 3rem" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <table id="tblCompras" class="display" style="width:100%; display: none;">
            <thead>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div id="eliminarCompraModal" class="modal fade" tabindex="-1" aria-labelledby="eliminarCompraModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="eliminarCompraForm" method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarCompraModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar este Compra?</p>
                    <input type="hidden" name="idCompra" id="idCompraInput" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    let table;

    $(document).ready(function () {
        let today = new Date();
        let firstDay = new Date(today.getFullYear(), today.getMonth(), 1).toISOString().split('T')[0];
        let lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0).toISOString().split('T')[0];

        $("#fechaInicio").val(firstDay);
        $("#fechaFin").val(lastDay);

        cargarData();
    });

    function cargarData() {
        $("#spinner").show();

        if ($.fn.dataTable.isDataTable('#tblCompras')) {
            $('#tblCompras').DataTable().destroy();
        }

        table = new DataTable('#tblCompras', {
            responsive: true,
            processing: true,
            serverSide: false,
            ajax: {
                url: "/Compras/Listar?handler=Compras",
                type: "GET",
                data: function (d) {
                    return {
                        fechaInicio: $("#fechaInicio").val() || "",
                        fechaFin: $("#fechaFin").val() || "",
                        tipoFecha: $("#tipoFecha").val() || 1
                    };
                },
                dataSrc: function (json) {
                    return json || [];
                },
                error: function (xhr, status, error) {
                    showAlert("danger", "Error al cargar compras: " + error);
                }
            },
            columns: [
                { data: "fechaEmision", title: "Emisión" },
                { data: "fechaPresentacion", title: "Presentacion", className: "text-start" },
                { data: "codigoClaseDocumento", title: "CODIGO", visible: false },
                { data: "numeroDocumento", title: "Num Documento", className: "text-start" },
                {
                    data: null,
                    title: "Proveedor",
                    className: "text-start",
                    render: function (data, type, row) {
                        return row.razonProveedor && row.razonProveedor.trim() !== ""
                            ? row.razonProveedor
                            : `${row.nombreProveedor} ${row.apellidopProveedor}`;
                    }
                },
                { data: "internasExentas", title: "Int Exentas", className: "text-center" },
                { data: "internacionalesExentasYONsujetas", title: "Intern Exentas y/o no sujetas", className: "text-center" },
                { data: "importacionesYONsujetas", title: "Import Exentas y/o no sujetas", className: "text-center" },
                { data: "internasGravadas", title: "Gravadas", className: "text-center" },
                { data: "internacionesGravadasBienes", title: "Internaciones gravadas de bienes", className: "text-center" },
                { data: "importacionesGravadasBienes", title: "Import gravadas de bienes", className: "text-center" },
                { data: "importacionesGravadasServicios", title: "Import gravadas de servicios", className: "text-center" },
                { data: "creditoFiscal", title: "Crédito fiscal", className: "text-center" },
                { data: "totalCompras", title: "Total compra", className: "text-center" },
                { data: "descripcionClaseDocumento", title: "Clase Doc" },
                { data: "descripcionTipOperacion", title: "Tipo Operación" },
                { data: "descripcionClasificacion", title: "Clasificación" },
                { data: "descripcionSector", title: "Sector" },
                { data: "descripcionCostoGasto", title: "Tipo Costo / Gasto" },
                {
                    data: null,
                    title: "OPT",
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        return `
                            <button class="btn btn-sm btn-primary edit-btn" data-id="${row.idDocCompra}">
                                <i class="fas fa-edit"></i> 
                            </button>
                            <button class="btn btn-sm btn-danger delete-btn" data-id="${row.idDocCompra}">
                                <i class="fas fa-trash"></i> 
                            </button>`;
                    }
                }
            ],
            "initComplete": function () {
                $("#spinner").hide();
                $("#tblCompras").show();
            },
            language: {
                search: "Buscar:",
                lengthMenu: "Mostrar _MENU_ registros por página",
                info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
                zeroRecords: "No se encontraron resultados",
                emptyTable: "No hay datos disponibles",
                paginate: {
                    first: "<span class='fas fa-angle-double-left'></span>",
                    last: "<span class='fas fa-angle-double-right'></span>",
                    next: "<span class='fas fa-chevron-right'></span>",
                    previous: "<span class='fas fa-chevron-left'></span>"
                }
            }
        });

        $('#tblCompras tbody').on('click', '.edit-btn', function () {
            let id = $(this).data('id');
            window.location.href = `Editar?id=${id}`;
        });

        $('#tblCompras tbody').on('click', '.delete-btn', function () {
            let id = $(this).data('id');
            $('#idCompraInput').val(id);
            $('#eliminarCompraModal').modal('show');
        });
    }

</script>