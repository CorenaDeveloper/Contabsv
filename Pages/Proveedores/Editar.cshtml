@page
@model Contabsv_core.Pages.Proveedores.EditarModel
@using Contabsv_core.Models
@using System.Security.Claims
<div class="card">
    <div class="card-header">
        <h5>Editar Proveedor</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Mod">
            <div class="row g-3">
                <div class="col-lg-4">
                    <label asp-for="Proveedor.nombres" class="form-label">Nombres:</label>
                    <input asp-for="Proveedor.nombres" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es persona natural.</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.apellidos" class="form-label">Apellidos:</label>
                    <input asp-for="Proveedor.apellidos" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es persona natural.</small>
                </div>

                <div class="col-lg-4">
                    <label class="form-label">Tipo Proveedor:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Proveedor.personaJuridica" class="form-check-input" type="radio" value="true" id="tipoJuridico" />
                            <label class="form-check-label" for="tipoJuridico">Jurídica</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Proveedor.personaJuridica" class="form-check-input" type="radio" value="false" id="tipoNatural" />
                            <label class="form-check-label" for="tipoNatural">Natural</label>
                        </div>
                    </div>
                    <small class="form-text">Seleccione el tipo de proveedor</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.nombreRazonSocial" class="form-label">Razon Social:</label>
                    <input asp-for="Proveedor.nombreRazonSocial" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es empresa jurídica.</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.nombreComercial" class="form-label">Nombre Comercial:</label>
                    <input asp-for="Proveedor.nombreComercial" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es empresa jurídica.</small>
                </div>

                <hr class="my-3">

                <div class="col-lg-4">
                    <label asp-for="Proveedor.representanteLegal" class="form-label">Representante Legal:</label>
                    <input asp-for="Proveedor.representanteLegal" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Aplica si es empresa jurídica.</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.duiRepresentanteLegal" class="form-label">Dui Representante:</label>
                    <input asp-for="Proveedor.duiRepresentanteLegal" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Aplica si es empresa jurídica.</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.telefonoCliente" class="form-label">Telefono Proveedor:</label>
                    <input asp-for="Proveedor.telefonoCliente" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.celular" class="form-label">Celular:</label>
                    <input asp-for="Proveedor.celular" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.nrc" class="form-label">NCR:</label>
                    <input asp-for="Proveedor.nrc" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.nitProveedor" class="form-label"> Nit Proveedor:</label>
                    <input asp-for="Proveedor.nitProveedor" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.email" class="form-label">Email:</label>
                    <input asp-for="Proveedor.email" class="form-control form-control-sm" type="email" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.direccion" class="form-label">Dirección:</label>
                    <textarea asp-for="Proveedor.direccion" class="form-control form-control-sm"></textarea>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.idSector" class="form-label">Sector:</label>

                    <select asp-for="Proveedor.idSector" class="form-select form-select-sm">
                        @if (ViewData["Sector"] != null)
                        {
                            var sectores = ViewData["Sector"] as List<SectorModel>;
                            foreach (var item in sectores)
                            {
                                <option value="@item.idSector">@item.detalle</option>
                            }
                        }
                        else
                        {
                            <option value="">No hay sectores disponibles</option>
                        }
                    </select>
                </div>

                <div class="col-lg-4">
                    <label asp-for="Proveedor.tipoContribuyente" class="form-label">Tipo Contribuyente</label>
                    <select asp-for="Proveedor.tipoContribuyente" class="form-select form-select-sm">
                        <option value="pequeño">Pequeño</option>
                        <option value="mediano">Mediano</option>
                        <option value="grande">Grande</option>
                    </select>
                </div>
            </div>

            <input asp-for="Proveedor.idProveedor" type="hidden" />
            <input asp-for="Proveedor.creado" type="hidden" />

            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-primary">Modificar</button>
            </div>
        </form>
    </div>
</div>

