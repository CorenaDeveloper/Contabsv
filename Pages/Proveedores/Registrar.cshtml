@page
@using System.Security.Claims
@model Contabsv_core.Pages.Proveedores.RegistrarModel
@using Contabsv_core.Models
<div class="card">
    <div class="card-header">
        <h5>Nuevo Proveedor</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="New">
            <div class="row g-3">
                <div class="col-lg-4">
                    <label asp-for="NewProd.nombres" class="form-label">Nombres:</label>
                    <input asp-for="NewProd.nombres" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es persona natural.</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.apellidos" class="form-label">Apellidos:</label>
                    <input asp-for="NewProd.apellidos" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es persona natural.</small>
                </div>

                <div class="col-lg-4">
                    <label class="form-label">Tipo Proveedor:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="NewProd.personaJuridica" class="form-check-input" type="radio" value="true" id="tipoJuridico" />
                            <label class="form-check-label" for="tipoJuridico">Jurídica</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="NewProd.personaJuridica" class="form-check-input" type="radio" value="false" id="tipoNatural" />
                            <label class="form-check-label" for="tipoNatural">Natural</label>
                        </div>
                    </div>
                    <small class="form-text">Seleccione el tipo de Proveedor</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.nombreRazonSocial" class="form-label">Nombre Razon Social:</label>
                    <input asp-for="NewProd.nombreRazonSocial" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es empresa jurídica.</small>
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.nombreComercial" class="form-label">Nombre Comercial:</label>
                    <input asp-for="NewProd.nombreComercial" class="form-control form-control-sm" />
                    <small class="form-text text-muted">Solo si es empresa jurídica.</small>
                </div>

                <hr class="my-3">

                <div class="col-lg-4">
                    <label asp-for="NewProd.representanteLegal" class="form-label">Representante Legal:</label>
                    <input asp-for="NewProd.representanteLegal" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.duiRepresentanteLegal" class="form-label">Dui Representante Legal:</label>
                    <input asp-for="NewProd.duiRepresentanteLegal" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.telefonoCliente" class="form-label">Telefono Proveedor:</label>
                    <input asp-for="NewProd.telefonoCliente" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.celular" class="form-label">Celular:</label>
                    <input asp-for="NewProd.celular" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.nrc" class="form-label">NRC:</label>
                    <input asp-for="NewProd.nrc" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.nitProveedor" class="form-label">Nit Proveedor:</label>
                    <input asp-for="NewProd.nitProveedor" class="form-control form-control-sm" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.email" class="form-label">Email:</label>
                    <input asp-for="NewProd.email" class="form-control form-control-sm" type="email" />
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.direccion" class="form-label">Dirección</label>
                    <textarea asp-for="NewProd.direccion" class="form-control form-control-sm"></textarea>
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.idSector" class="form-label">Sector:</label>

                    <select asp-for="NewProd.idSector" class="form-select form-select-sm">
                        @if (ViewData["Sector"] != null)
                        {
                            var sectores = ViewData["Sector"] as List<SectorModel>;
                            foreach (var item in sectores)
                            {
                                <option value="@item.idSector">@item.detalle</option>
                            }
                        }
                        else
                        {
                            <option value="">No hay sectores disponibles</option>
                        }
                    </select>
                </div>

                <div class="col-lg-4">
                    <label asp-for="NewProd.tipoContribuyente" class="form-label">Tipo Contribuyente:</label>
                    <select asp-for="NewProd.tipoContribuyente" class="form-select form-select-sm">
                        <option value="pequeño">Pequeño</option>
                        <option value="mediano">Mediano</option>
                        <option value="grande">Grande</option>
                    </select>
                </div>
            </div>

            <input asp-for="NewProd.idProveedor" type="hidden" value="0" />
            <input asp-for="NewProd.creado" type="hidden" />

            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-primary">
                    Registrar
                </button>
            </div>
        </form>
    </div>
</div>

