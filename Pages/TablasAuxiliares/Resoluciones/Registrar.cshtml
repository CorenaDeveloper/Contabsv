@page
@model Contabsv_core.Pages.TablasAuxiliares.Resoluciones.RegistrarModel
@using Contabsv_core.Models
@using System.Security.Claims
@{
}
<style>
    .o_form_sheet {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        margin: 2rem auto;
    }

    .o_field_image img {
        border-radius: 50%;
        width: 120px;
        height: 120px;
        object-fit: cover;
    }

    .opacity-trigger-hover:hover .opacity-100-hover {
        opacity: 1 !important;
    }

    .o_form_label {
        font-weight: 600;
    }

    .o_input {
        width: 100%;
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 0.5rem 0.75rem;
    }

    .nav-tabs .nav-link.active {
        background-color: #0d6efd;
        color: #fff;
        border-color: #dee2e6 #dee2e6 #fff;
    }

    .o_field_widget {
        margin-bottom: 1rem;
    }

    .o_autocomplete--input {
        position: relative;
    }

    .o_dropdown_button {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .o_tags_input input {
        border: none;
        padding: 0;
        min-width: 150px;
    }
</style>
<!-- [ Row 1 ] start -->
<div class="col-md-12 ">
    <div class="card statistics-card-1">
        <div class="card-body">
            <img src="~/images/widget/img-status-1.svg" alt="img" class="img-fluid img-bg" />
            <div class="d-flex align-items-center">
                <div class="avtar bg-brand-color-1 text-white me-3">
                    <i class="fas fa-dice-d6 f-26"></i>
                </div>
                <div>
                    <p class="text-muted mb-0">Datos</p>
                    <div class="d-flex align-items-end">
                        <h2 class="mb-0 f-w-500">Registrar Resolución</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form method="post">
    <div class="card">
        <div class="card-body">
            <input type="hidden" asp-for="ResolucionModel.id" value="0" />
            <div class="row g-3">
                <div class="col-lg-6">
                    <label class="form-label">Tipo Documento:</label>
                    <select class="form-select form-select-sm input-border-bottom"  asp-for="ResolucionModel.idTipoDocumento">
                        @foreach (var item in ViewData["TipoDocumentos"] as List<TipoDocumentoModel>)
                        {
                            <option value="@item.id">@item.nombre - (@item.sectorP)</option>
                        }
                    </select>
                    <span asp-validation-for="ResolucionModel.idTipoDocumento" class="text-danger"></span>
                </div>
                <div class="col-lg-6"></div>
                <div class="col-lg-4">
                    <label class="form-label">Número Resolucion:</label>
                    <input type="text" class="form-control form-control-sm input-border-bottom" id="numSerie" asp-for="ResolucionModel.numeroResolucion">
                    <span asp-validation-for="ResolucionModel.numeroResolucion" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label class="form-label">Número Serie:</label>
                    <input type="text" class="form-control form-control-sm input-border-bottom" id="numSerie" asp-for="ResolucionModel.numeroSerie">
                    <span asp-validation-for="ResolucionModel.numeroSerie" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <div class="mt-3 text-end">
                        <div class="button-container">
                            <button class="animated-button save-btn" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                                </svg>
                                <span class="text">R E G I S T R A R</span>
                                <span class="circle"></span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</form>
