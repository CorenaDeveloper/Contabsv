@page
@model Contabsv_core.Pages.Clientes.EditarModel
@using Contabsv_core.Models
@using System.Security.Claims
@{
    var idCliente = User.FindFirst("IdCliente")?.Value ?? "0";
}
<div class="row">
    <!-- [ Row 1 ] start -->
    <div class="col-md-12 ">
        <div class="card statistics-card-1">
            <div class="card-body">
                <img src="~/images/widget/img-status-1.svg" alt="img" class="img-fluid img-bg" />
                <div class="d-flex align-items-center">
                    <div class="avtar bg-brand-color-1 text-white me-3">
                        <i class="fas fa-dice-d6 f-26"></i>
                    </div>
                    <div>
                        <p class="text-muted mb-0">Datos</p>
                        <div class="d-flex align-items-end">
                            <h2 class="mb-0 f-w-500">Editar Cliente</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" asp-page-handler="Mod">
            <input asp-for="clt.idClienteClt" type="hidden" />
            <input asp-for="clt.personaJuridica" type="hidden" />

            <div class="row mt-3">

                @* Si es persona natural *@
                @if (!Model.clt.personaJuridica)
                {
                    <div class="col-lg-6">
                        <input class="mb-3 form-control form-control-lg input-border-bottom" type="text" placeholder="POR EJEMPLO, MAURICIO"
                               placeholder="Nombre Legal, Ejemplo Contabvs" asp-for="clt.nombres">
                    </div>
                    <div class="col-lg-6">
                        <input class="mb-3 form-control form-control-lg input-border-bottom" type="text" placeholder="POR EJEMPLO, CORENA"
                               placeholder="Nombre Legal, Ejemplo Contabvs" asp-for="clt.apellidos">
                    </div>
                }

                @* Si es persona jurídica *@
                @if (Model.clt.personaJuridica)
                {
                    <div class="col-lg-12">
                        <input class="mb-3 form-control form-control-lg input-border-bottom" type="text" placeholder="POR EJEMPLO, MAURICIO"
                               placeholder="Nombre Legal, Ejemplo Contabvs" asp-for="clt.nombreRazonSocial">
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="clt.representanteLegal" class="form-label">Representante Legal</label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="clt.representanteLegal" class="form-control form-control-sm input-border-bottom" />
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="clt.duiRepresentanteLegal" class="form-label">DUI Representante Legal</label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="clt.duiRepresentanteLegal" class="form-control form-control-sm input-border-bottom" />
                    </div>
                }

                @* Campos comunes *@

                <div class="col-lg-2">
                    <label asp-for="clt.telefonoCliente" class="form-label">Teléfono</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.telefonoCliente" class="form-control form-control-sm input-border-bottom" />
                </div>

                <div class="col-lg-2">
                    <label asp-for="clt.celular" class="form-label">Celular</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.celular" class="form-control form-control-sm input-border-bottom" />
                </div>


                <div class="col-lg-2">
                    <label asp-for="clt.nrc" class="form-label">NRC</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nrc" class="form-control form-control-sm input-border-bottom" />
                </div>

                <div class="col-lg-2">
                    <label asp-for="clt.nitCliente" class="form-label">NIT</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nitCliente" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.tipoContribuyente" class="form-label">Tipo Contribuyente:</label>
                </div>
                <div class="col-lg-4">
                    <select asp-for="clt.tipoContribuyente" class="form-select form-select-sm input-border-bottom">
                        <option value="pequeño">Pequeño</option>
                        <option value="mediano">Mediano</option>
                        <option value="grande">Grande</option>
                    </select>
                </div>

              @* <div class="col-lg-2">
                    <label asp-for="Proveedor.idSector" class="form-label">Sector:</label>
                </div> *@
            </div>

            <div class="mt-3 text-end">
                <div class="button-container">
                    <button class="animated-button cancel-btn" type="button" onclick="window.location.href='/Proveedores/Lista'">
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                            <path d="M7.8284 13H20V11H7.8284L13.1924 5.63589L11.7782 4.22168L4 12L11.7782 19.778L13.1924 18.3638L7.8284 13Z"></path>
                        </svg>
                        <span class="text">C A N C E L A R</span>
                        <span class="circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                            <path d="M7.8284 13H20V11H7.8284L13.1924 5.63589L11.7782 4.22168L4 12L11.7782 19.778L13.1924 18.3638L7.8284 13Z"></path>
                        </svg>
                    </button>

                    <button class="animated-button save-btn" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                        </svg>
                        <span class="text">M O D I F I C A R</span>
                        <span class="circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function toggleTipo(isJuridica) {
        // Cambia el valor oculto
        document.querySelector('input[name="clt.personaJuridica"]').value = isJuridica;

        // Aquí puedes agregar lógica para ocultar/mostrar campos según la opción
        if (isJuridica) {
            document.querySelectorAll('.campo-persona').forEach(e => e.style.display = 'none');
            document.querySelectorAll('.campo-empresa').forEach(e => e.style.display = '');
        } else {
            document.querySelectorAll('.campo-persona').forEach(e => e.style.display = '');
            document.querySelectorAll('.campo-empresa').forEach(e => e.style.display = 'none');
        }
    }

    // Llama al cargar si es necesario
    document.addEventListener('DOMContentLoaded', () => {
        toggleTipo(@Model.clt.personaJuridica.ToString().ToLower());
    });
</script>
