            <div class="row">
                <!-- Nombre de la Empresa -->
                <div class="col-lg-12">
                    <input class="mb-3 form-control form-control-lg input-border-bottom" type="text" placeholder="POR EJEMPLO, CONTABSV, S.A. DE C.V." id="nombreRazonSocial"
                           placeholder="Nombre Legal, Ejemplo Contabvs" asp-for="clt.nombreRazonSocial" required>
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.telefonoCliente" class="form-label">Telefono:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.telefonoCliente" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.celular" class="form-label">Celular:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.celular" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.nombreComercial" class="form-label">Nombre Comercial:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nombreComercial" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
