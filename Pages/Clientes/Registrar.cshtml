@page
@model Contabsv_core.Pages.Clientes.RegistrarModel
@using System.Security.Claims
@using Contabsv_core.Models
<style>
    .o_form_sheet {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        margin: 2rem auto;
    }

    .o_field_image img {
        border-radius: 50%;
        width: 120px;
        height: 120px;
        object-fit: cover;
    }

    .opacity-trigger-hover:hover .opacity-100-hover {
        opacity: 1 !important;
    }

    .o_form_label {
        font-weight: 600;
    }

    .o_input {
        width: 100%;
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 0.5rem 0.75rem;
    }

    .nav-tabs .nav-link.active {
        background-color: #0d6efd;
        color: #fff;
        border-color: #dee2e6 #dee2e6 #fff;
    }

    .o_field_widget {
        margin-bottom: 1rem;
    }

    .o_autocomplete--input {
        position: relative;
    }

    .o_dropdown_button {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .o_tags_input input {
        border: none;
        padding: 0;
        min-width: 150px;
    }
</style>

<div class="row">
    <!-- [ Row 1 ] start -->
    <div class="col-md-12 ">
        <div class="card statistics-card-1">
            <div class="card-body">
                <img src="~/images/widget/img-status-1.svg" alt="img" class="img-fluid img-bg" />
                <div class="d-flex align-items-center">
                    <div class="avtar bg-brand-color-1 text-white me-3">
                        <i class="fas fa-dice-d6 f-26"></i>
                    </div>
                    <div>
                        <p class="text-muted mb-0">Datos</p>
                        <div class="d-flex align-items-end">
                            <h2 class="mb-0 f-w-500">Registrar Cliente</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">


    <div class="card-body">
        <!-- Radios para elegir tipo -->
        <div class="o_field_widget o_field_radio">
            <div role="radiogroup" class="d-flex justify-content-center gap-3">
                <div class="form-check o_radio_item">
                    <input type="radio" class="form-check-input" name="company_type" id="radio_empresa" checked>
                    <label class="form-check-label" for="radio_empresa">Empresa</label>
                </div>
                <div class="form-check o_radio_item">
                    <input type="radio" class="form-check-input" name="company_type" id="radio_persona">
                    <label class="form-check-label" for="radio_persona">Persona</label>
                </div>
            </div>
        </div>
        <!-- FORMULARIO PERSONA -->
        <form method="post" asp-page-handler="New" id="form_persona" class="mt-4">
            <div class="row">
                <!-- Nombre de la Empresa -->
                <div class="col-lg-6">
                    <input class="mb-3 form-control form-control-lg input-border-bottom" type="text" placeholder="POR EJEMPLO, MAURICIO"
                           placeholder="Nombre Legal, Ejemplo Contabvs" asp-for="clt.nombres" required>
                </div>
                <div class="col-lg-6">
                    <input class="mb-3 form-control form-control-lg input-border-bottom" type="text" placeholder="POR EJEMPLO, CORENA"
                           placeholder="Nombre Legal, Ejemplo Contabvs" asp-for="clt.apellidos" required>
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.telefonoCliente" class="form-label">Telefono:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.telefonoCliente" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.celular" class="form-label">Celular:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.celular" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.nombreComercial" class="form-label">Nombre Comercial:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nombreComercial" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.tipoContribuyente" class="form-label">Tipo Contribuyente:</label>
                </div>
                <div class="col-lg-4">
                    <select asp-for="clt.tipoContribuyente" class="form-select form-select-sm input-border-bottom">
                        <option value="pequeño">Pequeño</option>
                        <option value="mediano">Mediano</option>
                        <option value="grande">Grande</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.nrc" class="form-label">NRC:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nrc" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.nitCliente" class="form-label">NIT:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nitCliente" class="form-control form-control-sm input-border-bottom" />
                </div>
            </div>
            <input asp-for="clt.idClienteClt" type="hidden" value="0" />
            <input asp-for="clt.personaJuridica" type="hidden" value="false" />
            <div class="mt-3 text-end">
                <div class="button-container">
                    <button class="animated-button cancel-btn" type="button" onclick="window.location.href='/Proveedores/Lista'">
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                            <path d="M7.8284 13H20V11H7.8284L13.1924 5.63589L11.7782 4.22168L4 12L11.7782 19.778L13.1924 18.3638L7.8284 13Z"></path>
                        </svg>
                        <span class="text">C A N C E L A R</span>
                        <span class="circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                            <path d="M7.8284 13H20V11H7.8284L13.1924 5.63589L11.7782 4.22168L4 12L11.7782 19.778L13.1924 18.3638L7.8284 13Z"></path>
                        </svg>
                    </button>

                    <button class="animated-button save-btn" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                        </svg>
                        <span class="text">G U A R D A R</span>
                        <span class="circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </form>


        <!-- FORMULARIO EMPRESA -->
