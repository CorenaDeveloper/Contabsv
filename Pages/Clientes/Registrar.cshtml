                    <label asp-for="clt.tipoContribuyente" class="form-label">Tipo Contribuyente:</label>
                </div>
                <div class="col-lg-4">
                    <select asp-for="clt.tipoContribuyente" class="form-select form-select-sm input-border-bottom">
                        <option value="pequeño">Pequeño</option>
                        <option value="mediano">Mediano</option>
                        <option value="grande">Grande</option>
                    </select>
                </div>
                <div class="col-lg-2">
                </div>
                <div class="col-lg-4">
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.nrc" class="form-label">NRC:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nrc" class="form-control form-control-sm input-border-bottom" />
                </div>
                <div class="col-lg-2">
                </div>
                <div class="col-lg-4">
                </div>
                <div class="col-lg-2">
                    <label asp-for="clt.nitCliente" class="form-label">NIT:</label>
                </div>
                <div class="col-lg-4">
                    <input asp-for="clt.nitCliente" class="form-control form-control-sm input-border-bottom" />
                </div>
            </div>
            <input asp-for="clt.idClienteClt" type="hidden" value="0" />
            <input asp-for="clt.personaJuridica" type="hidden" value="true" />
            <div class="mt-3 text-end">
                <div class="button-container">
                    <button class="animated-button cancel-btn" type="button" onclick="window.location.href='/Proveedores/Lista'">
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                            <path d="M7.8284 13H20V11H7.8284L13.1924 5.63589L11.7782 4.22168L4 12L11.7782 19.778L13.1924 18.3638L7.8284 13Z"></path>
                        </svg>
                        <span class="text">C A N C E L A R</span>
                        <span class="circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                            <path d="M7.8284 13H20V11H7.8284L13.1924 5.63589L11.7782 4.22168L4 12L11.7782 19.778L13.1924 18.3638L7.8284 13Z"></path>
                        </svg>
                    </button>

                    <button class="animated-button save-btn" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                        </svg>
                        <span class="text">R E G I S T R A R</span>
                        <span class="circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </form>
    </div>
    
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const radioPersona = document.getElementById("radio_persona");
        const radioEmpresa = document.getElementById("radio_empresa");

        const formPersona = document.getElementById("form_persona");
        const formEmpresa = document.getElementById("form_empresa");

        function toggleForms() {
            if (radioPersona.checked) {
                formPersona.style.display = "block";
                formEmpresa.style.display = "none";
            } else if (radioEmpresa.checked) {
                formPersona.style.display = "none";
                formEmpresa.style.display = "block";
            }
        }

        // Inicializar el estado cuando carga la página
        toggleForms();

        // Escuchar cambios en los radios
        radioPersona.addEventListener("change", toggleForms);
        radioEmpresa.addEventListener("change", toggleForms);
    });
</script>